<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp119h">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_rate"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/im_user_image"
        android:layout_width="@dimen/dp47w"
        android:layout_height="@dimen/dp47h"
        android:layout_marginTop="@dimen/dp12h"
        android:layout_marginEnd="@dimen/dp20w"
        android:src="@drawable/im_man"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Ahmed Khairallah"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp15_5"
        app:layout_constraintEnd_toEndOf="@+id/im_user_image"
        app:layout_constraintTop_toBottomOf="@+id/im_user_image" />

    <TextView
        android:id="@+id/tv_user_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(4.5)"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp15_5"
        android:drawableEnd="@drawable/star"
        android:drawablePadding="5dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_user_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_name" />


</androidx.constraintlayout.widget.ConstraintLayout>