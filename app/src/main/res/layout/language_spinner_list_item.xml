<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/transparent">

    <TextView
        android:id="@+id/tv_country_name"
        android:layout_width="@dimen/dp200w"
        android:layout_height="@dimen/dp40h"
        android:background="@color/transparent"
        android:gravity="center"
        android:hint="@string/select_country"
        android:textColor="@android:color/black"
        android:textColorHint="@color/text_color_black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/view10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/language_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/view10"
        app:layout_constraintStart_toEndOf="@+id/tv_country_name"
        app:layout_constraintTop_toTopOf="@+id/tv_country_name" />

    <View
        android:id="@+id/view10"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp1h"
        android:layout_marginTop="8dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_country_name" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>